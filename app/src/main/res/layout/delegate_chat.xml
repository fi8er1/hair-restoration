<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_name_sender_or_receiver"
        android:text="s9iper1"
        android:layout_margin="5dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_body"
        android:background="@mipmap/chat_bg_s"
        android:padding="20dp"
        android:layout_below="@+id/user_name_sender_or_receiver"
        android:text="this is a message"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/user_name_sender_or_receiver"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_date_time"
        android:text="test"
        android:textSize="12sp"
        android:textColor="#d3d3d3"
        android:layout_margin="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_body"
        android:layout_alignRight="@+id/message_body"
        android:layout_alignEnd="@+id/message_body" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
