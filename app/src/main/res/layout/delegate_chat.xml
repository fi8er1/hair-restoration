<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_name_sender_or_receiver"
        android:text="test"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_body"
        android:background="@mipmap/chat_bg_s"
        android:text="test"
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/user_name_sender_or_receiver"
        android:layout_toRightOf="@+id/user_name_sender_or_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_date_time"
        android:text="test"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_body"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
