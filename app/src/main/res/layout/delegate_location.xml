<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location_title"
                android:textSize="22sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="Location Title"
                android:textColor="#154750"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/location_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:layout_below="@+id/location_title"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:text="Address goes here, A longe address test"
                android:layout_below="@+id/location_image"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/phone_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:text="Phone"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@+id/address"/>

            <TextView
                android:id="@+id/toll_free_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:layout_below="@+id/phone_number_text_view"
                android:text="Toll Free"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
